<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

  {{#each Comments as |comment| }}
  <p>{{comment.body}}</p>
  {{/each}}
  {{#if logged_in}}
  <textarea id="comment" data-id="{{id}}"></textarea>
  <button class="commentBtn" id="commentBtn">Comment</button>
</div>
{{/if}}
<script src="/js/comment.js"></script>